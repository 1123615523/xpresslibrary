<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aaa.dao.SigninDao">

    <select id="findSigninInfo" resultType="com.aaa.entity.Signin">
        select * from signin where customerid = #{value}
    </select>

    <select id="findCount" resultType="java.lang.Integer">
        select count(income) from signin where customerid = #{value}
    </select>

    <select id="findMoney" resultType="java.lang.Double">
        select sum(income) from signin where customerid = #{value}
    </select>

    <select id="findTime" resultType="java.util.Date">
        select max(incometime) from signin where customerid = #{value}
    </select>

</mapper>